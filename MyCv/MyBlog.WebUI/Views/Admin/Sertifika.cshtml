@model IEnumerable<Certificate>
@{
    ViewData["Title"] = "Sertifika";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (TempData["cermessage"] != null)
{
    <div class="alert alert-success">
        @TempData["cermessage"]
    </div>
}
@if (TempData["countcermessage"] != null)
{
    <div class="alert alert-warning">
        @TempData["countcermessage"]
    </div>
}
<form asp-controller="Admin" asp-action="Sertifika" class="input-group" method="get">
    <div class="form-outline">
        <input type="search" id="q" name="q" placeholder="Aramak için giriş yapın" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary ml-1">
        <i class="fas fa-search"></i>
    </button>
</form>
<hr />
<h1>Sertifikalar</h1>
<hr />
<br />

<table class="table table-bordered table-striped table-sm">
    <thead>
        <tr>
            <th>Id</th>
            <th>Sertifika Adı</th>
            <th>Sertifika Tarihi</th>
            <th>Image</th>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var certificate in Model)
        {
            <tr>
                <td>@certificate.Id</td>
                <td>@certificate.CertificateName</td>
                <td>@certificate.CertificateDate</td>
                <td>
                    <img src="~/img/sertifika/@certificate.ImageUrl" style="width:100px;height:100px" />
                </td>
                <td>
                    <a asp-action="CerEdit" asp-route-id="@certificate.Id" class="btn btn-info">Düzenle</a>
                    <a asp-action="CerDelete" asp-route-filename="@certificate.ImageUrl" asp-route-id="@certificate.Id" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="row">
    <div class="container">
        <a asp-action="CerCreate" class="btn btn-primary btn-block">Kayıt Ekle</a>
    </div>
</div>
