@model Certificate
@{
    ViewData["Title"] = "CerCreate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Sertifika Ekle</h1>
<hr />
<br />

<form asp-action="CerCreate" method="post" enctype="multipart/form-data">
    <div class="container small">
        <div class="form-group">
            <label asp-for="CertificateName"></label>
            <input asp-for="CertificateName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="CertificateDate"></label>
            <input asp-for="CertificateDate" class="form-control" />
        </div>
        <div class="form-group">
            <input type="file" name="file" id="file" class="form-control" />
        </div>
        <input type="submit" class="btn btn-primary" value="Gönder" />
    </div>
</form>



