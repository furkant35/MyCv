@model Certificate
@{
    ViewData["Title"] = "CerEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>@Model.CertificateName / Sertifika Düzenle</h1>
<hr />
<br />

<form asp-action="CerEdit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ImageUrl" />
    <div class="container small">
        <div class="form-group">
            <label asp-for="CertificateName"></label>
            <input asp-for="CertificateName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="CertificateDate"></label>
            <input asp-for="CertificateDate" class="form-control" />
        </div>
        <div class="form-group">
            <img src="~/img/sertifika/@Model.ImageUrl" width="200" />
            <input type="file" name="file" id="file" class="form-control" />
        </div>
        <input type="submit" class="btn btn-primary" value="Gönder" />
    </div>
</form>
