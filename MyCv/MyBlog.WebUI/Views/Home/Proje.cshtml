@model IEnumerable<Project>
@{
    ViewData["Title"] = "Proje";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var i = 1;
}

@section Scripts{
    <script src="assets/vendors/entry/jq.entry.min.js"></script> }

<section class="portfolio-section">
    <h2 class="section-title">PROJELER</h2>
    <hr />
    <div class="portfolio-wrapper">
        @foreach (var project in Model)
        {
            <figure class="portfolio-item hover-box">
                <img src="~/img/projeler/@project.ImageUrl" alt="@project.Description" class="portfolio-item-img">
                <figcaption class="portfolio-item-details overlay">
                        <h5 class="portfolio-item-title">PROJE @i</h5>
                    <p class="portfolio-item-description">@project.Description</p>
                </figcaption>
            </figure>
            i++;
        }
    </div>
</section>
